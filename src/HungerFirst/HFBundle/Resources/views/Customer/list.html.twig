
{# render search bar! #}
{{ render(controller('HFBundle:Customer:searchBar',{'query': query} )) }} 
        
<div class="panel panel-primary">
    <div class="panel-heading">
        Customers
        <span class="pull-right">
            <a href="{{ path('hf_customer_create') }}" class="btn btn-success">Add</a>
        </span>
    </div>
    <table class="table table-hover table-striped customer-listing">
        <tr>
            <th>
                <span class="glyphicon glyphicon-picture"></span>
                Photo
            </th>
            <th>
                <span class="glyphicon">#</span>
                ID
            </th>
            <th>
                <span class="glyphicon glyphicon-user"></span>
                First & Last Name
            </th>
            <th>
                <span class="glyphicon glyphicon-road"></span>
                Address
            </th>
            <th>
                <span class="glyphicon glyphicon-phone-alt"></span>
                Phone Number
            </th>
        </tr>
        {% for customer in customers %}
            <tr {% if (query.id == customer.id) %} class="success" {% endif %}>
                <td>
                    <img class="img-responsive img-thumbnail" src="http://www.soothetube.com/wp-content/uploads/2012/05/Bob-Ross2.jpg">
                </td>
                <td>{{customer.id}}</td>
                <td>{{customer.firstName}} {{ customer.lastName }}</td>
                <td>{{customer.address}}</td>
                <td>{{customer.phoneNumber}}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    <div class="alert alert-warning">
                        Sorry, there are no customers to be displayed.
                    </div>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>

{% if pages > 1 %}
    <div class="panel-footer">
        <ul class="pagination">

            {% for i in 1..pages %}
                {% if i == 1 and i == page %}
                    <li class="disabled"><a>&laquo;</a></li>
                {% elseif i == 1 %}
                    <li><a href="{{ path('hf_customer_list', query|merge({'page': (page-1)})) }}">&laquo;</a></li>
                {% endif %}

                {% if i == page %}
                    <li class="active"><a>{{ i }} <span class="sr-only">(current)</span></a></li>
                {% else %}
                    <li><a href="{{ path('hf_customer_list', query|merge({'page': i})) }}">{{ i }}</a></li>
                {% endif %}

                {% if i == page and page == pages %}
                    <li class="disabled"><a>&raquo;</a></li>
                {% elseif i == pages %}
                    <li><a href="{{ path('hf_customer_list', query|merge({'page': (page+1)})) }}">&raquo;</a></li>
                {% endif %}

            {% endfor %}
        </ul>
    </div>
{% endif %}

