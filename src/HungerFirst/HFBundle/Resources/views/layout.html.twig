{% extends 'HFBundle::base.html.twig' %}

{%block body %}
    {% block header %}
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('hf_homepage') }}">
                            <img class="img-responsive" style="height: 30px;" alt="Brand" src="{{ asset('res/images/logo-brand.png') }}">
                        </a>
                    </div>
                   
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('hf_homepage') }}">Home</a></li>                          
                        </ul>
                        <form class="navbar-form navbar-left" action="{{ path('hf_search_bar') }}" method="POST" role="search">
                            <div class="form-group">
                                <input type="number" min="0" required="required" name="customerSearchType[id]" class="form-control"  placeholder="Search by ID">
                            </div>
                            <button class="btn btn-sm btn-default" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                                Search
                            </button>
                        </form>  
                            
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Customers <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ path('hf_customer_create') }}">Add New</a></li>
                                    <li><a href="{{ path('hf_homepage') }}">Find</a></li>
                                </ul>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ path('fos_user_registration_register') }}">Add User</a></li>
                                    <li><a href="{{ path('hf_user_list') }}">List Users</a></li>
                                    <li><a href="{{ path('hf_checkouts') }}">List Checkouts</a></li>
                                </ul>
                            </li>
                            {% endif %}
                            <li><p class="navbar-text text-muted">Logged in as {{ app.user }} </p></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Log out</a></li>
                            
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>

    {% endblock %}
    <div class="container">
        {% block content %}
        {% endblock %}
    </div>
{% endblock %} 