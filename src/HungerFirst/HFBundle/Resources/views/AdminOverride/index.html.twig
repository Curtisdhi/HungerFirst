{% extends 'HFBundle::layout.html.twig' %}

{% block title %}Admin override request - Hungry First{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">{{ flashMessage }}</div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('warning') %}
                    <div class="alert alert-warning">{{ flashMessage }}</div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">Admin Override Requested</div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                            <div>
                            {{ form_errors(form) }} 
                            </div>

                            {{ form_row(form.key) }}
                            <a href="javascript:history.back(-1)" class="btn btn-default pull-right">Back</a>
                            {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'} }) }}  

                            {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}